{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "baseUrl": "./",
    "lib": ["ES2019", "ESNext"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./src",
    "strict": true,
    "types": ["node"],
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
