{
  "name": "awesome-logging",
  "version": "1.0.0",
  "description": "Advanced logging messages, interactive prompts, loading animations and more in TypeScript",
  "main": "./lib/cjs/index.js",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "type": "module",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "yarn eslint ./src/**",
    "test": "jest",
    "prebuild": "yarn rimraf lib",
    "build": "yarn build-esm && yarn build-cjs",
    "build-base": "tsc -p .",
    "build-esm": "yarn build-base --outDir lib/esm",
    "build-cjs": "yarn build-base --outDir lib/cjs --module commonjs && yarn fix-cjs",
    "fix-cjs": "node --loader ts-node/esm ./fix-cjs.ts"
  },
  "license": "MIT",
  "private": false,
  "dependencies": {
    "chalk": "^4.1.2",
    "restore-cursor": "^3.1.0",
    "slice-ansi": "^4.0.0",
    "strip-ansi": "^6.0.1"
  },
  "devDependencies": {
    "@awdware/eslint-config-base": "^1.0.0",
    "@awdware/eslint-config-nodejs": "^1.0.0",
    "@awdware/prettier-config": "^0.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^18.0.0",
    "@types/slice-ansi": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.6.0",
    "jest": "^27.4.7",
    "jest-junit": "^13.0.0",
    "legally": "^3.5.10",
    "node-terminal-simulator": "^1.2.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.7.0-beta"
  },
  "prettier": "@awdware/prettier-config",
  "keywords": [
    "log",
    "logging",
    "logger",
    "awesome",
    "spinner",
    "progress",
    "interactive",
    "enquirer",
    "inquirer",
    "typescript",
    "multi",
    "multiline",
    "advanced"
  ],
  "author": {
    "name": "Janik Schumacher (LoaderB0T)",
    "url": "https://awdware.de"
  },
  "homepage": "https://github.com/LoaderB0T/awesome-logging",
  "bugs": {
    "url": "https://github.com/LoaderB0T/awesome-logging/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LoaderB0T/awesome-logging.git"
  }
}
